<h1><%= @place["name"] %></h1>
  <p>
    <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Post</a>
  </p>


<div class="row">
  <% for entry in @entries %>
    <div class="col-sm-6 col-md-4">
      <h3 class="h3 mb-3"><%= entry["title"] %></h3>
      <h4 class="h6 mb-2"><%= entry["occurred_on"] %></h4>
      <% if entry.uploaded_image.present? %>
      <img src="<%= url_for(entry.uploaded_image)%>" class="img-fluid">
      <%end%>
      <p class="pb-3 mt-3"><%= entry["description"] %></p>
    </div>
  <% end %>

  <p>
    <a href="/places" class="btn btn-outline-secondary">Back to All Places</a>
  </p>
</div>